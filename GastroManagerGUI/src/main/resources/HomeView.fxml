<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.id.gastromanager.controller.HomeController"
      alignment="CENTER">
    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="greetingsLabel" text="Witaj %s!"/>
        <Label text="Wybierz restaurację, w której chcesz złożyć zamówienie:"/>
        <ListView fx:id="restaurantsListView" maxHeight="150"/>
        <HBox alignment="BASELINE_RIGHT">
            <Button fx:id="selectRestaurantButton" text="Wybierz" onMouseClicked="#selectRestaurantButtonOnClicked"/>
        </HBox>
        <Region prefHeight="40"/>
        <Separator maxWidth="200"/>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="settingsButton" text="Ustawienia konta" onMouseClicked="#settingsButtonOnClicked"/>
            <Button fx:id="logoutButton" text="Wyloguj" onMouseClicked="#logoutButtonOnClicked"/>
        </HBox>
    </VBox>
</HBox>
